<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".view.ConsejosActivity">

    <!-- Contenedor principal con orientación vertical -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título "Consejos" -->
        <TextView
            android:id="@+id/title_consejos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Consejos"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- TextViews para cada consejo. El texto se establecerá desde Java. -->
        <TextView
            android:id="@+id/consejo_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_consejo"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Consejo 1" />

        <TextView
            android:id="@+id/consejo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_consejo"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Consejo 2" />

        <TextView
            android:id="@+id/consejo_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_consejo"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Consejo 3" />

        <TextView
            android:id="@+id/consejo_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_consejo"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Consejo 4" />

        <TextView
            android:id="@+id/consejo_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_consejo"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            tools:text="Consejo 5" />

    </LinearLayout>

    <!-- ========= INICIO DE LA CORRECCIÓN ========= -->
    <!-- Barra de Navegación Inferior APLICANDO EL NUEVO ESTILO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/CustomBottomNavigationView" />
    <!-- ========= FIN DE LA CORRECCIÓN ========= -->

</androidx.constraintlayout.widget.ConstraintLayout>


